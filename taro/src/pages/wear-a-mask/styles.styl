.mask-page
  height 100vh
  background #f9f9f9
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between

.main-wrap
  margin 15px 12px
  background #fff
  padding 25px

.to-choose
  border 1px dashed #efefef
  width 298px
  height 298px
  margin 0 auto
  background url(https://n1image.hjfile.cn/res7/2020/02/01/e97ba6b3752e00d4876a227582e19ed7.png) no-repeat center
  background-size auto 100px

.image-wrap
  position relative
  width: 300px
  height 300px



.image-selected
  width: 300px
  height 300px

.cropper-wrap
  position fixed
  left 0
  top: 0

.button-wrap
  margin-top 20px
  display flex
  justify-content center
  font-size: 12px
  color #2f3742
  line-height 1.5
  text-align center


.button-remove
  padding-top 40px
  width 60px
  background url(https://n1image.hjfile.cn/res7/2020/02/01/63e0c77558a7bc50c4f2666b8df449e0.png) no-repeat center top
  background-size auto 40px
  font-size: 10px



.button-download
  padding-top 40px
  width 60px
  margin-left 30px
  background url(https://n1image.hjfile.cn/res7/2020/02/01/8fb88a2a273c37c6098966681c402f21.png) no-repeat center top
  background-size auto 40px
  font-size: 10px

.mask {
  height: 100px;
  width: 100px;
  position: absolute;
  border: dashed 2px yellow;
  top:100px;
}

.canvas-mask
  position absolute
  left 0
  top 0
  width 300px
  height 300px


.mask-select-wrap {
   width: 100%;
   bottom: 5px;
   white-space: nowrap;
}
.image-item {
  height: 70px;
  width: 70px;
  border:2px solid;
  border-color: #eeeeee;
  margin: 5px;
}


.image-btn-handle,
.image-btn-cancel{
  position: absolute;
  z-index: 1;
  width:20px;
  height:20px;
}