.mask-page
  height 100vh
  background #f9f9f9
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between

.main-wrap
  margin 15px 12px
  background #fff
  padding 25px

.to-choose
  border 1px dashed #efefef
  width 298px
  height 298px
  margin 0 auto
  background url(https://n1image.hjfile.cn/res7/2020/02/01/e97ba6b3752e00d4876a227582e19ed7.png) no-repeat center
  background-size auto 100px

.image-position
  position relative
  width 300px
  height 300px
  overflow hidden
  margin 0 auto


.canvas-mask-good
  position absolute
  left 0
  top 0
  width 300px
  height 300px
  overflow hidden
  margin 0 auto

.canvas-mask
  position absolute
  left 0
  top 0
  width 300px
  height 300px


.image-wrap
  position relative
  width: 300px
  height 300px



.image-selected
  width: 300px
  height 300px

.cropper-wrap
  position fixed
  left 0
  top: 0

.button-wrap
  margin-top 20px
  display flex
  justify-content center
  font-size: 12px
  color #2f3742
  line-height 1.5
  text-align center


.button-remove
  padding-top 40px
  width 60px
  background url(https://n1image.hjfile.cn/res7/2020/02/01/63e0c77558a7bc50c4f2666b8df449e0.png) no-repeat center top
  background-size auto 40px
  font-size: 10px



.button-download
  padding-top 40px
  width 60px
  margin-left 30px
  background url(https://n1image.hjfile.cn/res7/2020/02/01/8fb88a2a273c37c6098966681c402f21.png) no-repeat center top
  background-size auto 40px
  font-size: 10px

.button-avatar
.button-camera
.button-gallery
  font-size 12px
  line-height 1.25
  width 50px
  padding 10px
  border-radius 25px
  margin 0 10px


.mask {
  height: 100px;
  width: 100px;
  position: absolute;
  border: dashed 2px yellow;
  top:100px;
  z-index 1
}



.bottom-tips-wrap
  padding 10px 0
  font-size 12px
  line-height 1.5
  color #95A1AF
  word-break break-all
  text-align center

.mask-select-wrap {
   width: 100%;
   bottom: 5px;
   white-space: nowrap;
}
.image-item {
  height: 70px;
  width: 70px;
  border:2px solid;
  border-color: #eeeeee;
  margin: 5px;
}


.image-btn-handle,
.image-btn-cancel{
  position: absolute;
  z-index: 1;
  width:20px;
  height:20px;
}

.virus-btn
  position fixed
  right 0
  bottom 90px
  font-size 12px
  line-height 30px
  padding 0 10px
  border-radius 15px 0 0 15px
  background-color #4fa938
  color #fff
  display flex
  align-items center
  &:before
    content ''
    display inline-block
    margin-right 5px
    width 16px
    height 16px
    background url(https://n1image.hjfile.cn/res7/2020/02/08/a5f4812ff70914f64550cee1b473d6c7.png) no-repeat
    background-size contain