html
  .avatar-edit-page
    height 100%
    max-width 640PX
    margin 0 auto

$animateDuration = 0.35s

.avatar-edit-page
  background linear-gradient(#1f55ff, #dae6f5, #fff, #fff)
  height 100vh
  overflow hidden
  box-sizing border-box
  display flex
  flex-direction column
  justify-content space-between
  border-radius 0
  transition $animateDuration cubic-bezier(0.68, -0.55, 0.265, 1.55) transform, $animateDuration cubic-bezier(0.68, -0.55, 0.265, 1.55) border-radius


.page-title
  padding-left 3px
  font-size 16px
  font-weight 400
  color #2f3742
  line-height 44px
  height 44px

.page-title-icon
  display inline-block
  width 44px
  height 44px
  vertical-align middle
  margin -3px 10px 0 0 

.canvas-shape
  position absolute
  left 0
  top -9999px
  width 600px
  height 600px

.main-wrap
  display flex
  flex-direction column
  justify-content space-between
  flex 1
  overflow hidden

.page-cover
  margin 133px auto 0
  width 300px
  height 300px

.tabs-bottom
  transition 0.3s linear
  transform translateY(100%)
  &.tabs-open
    transform translateY(0)

.avatar-edit-page.menu-open
  transform translate(230px, 0) scale(0.75)
  box-shadow 0 0 0 3px rgba(0, 0, 0, 0.05)
  border-radius 50px
  

