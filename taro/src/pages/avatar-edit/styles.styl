html
  .avatar-edit-page
    height 100%
    max-width 640PX
    margin 0 auto

.avatar-edit-page
  height 100vh
  background #f9f9f9
  overflow hidden
  box-sizing border-box
  display flex
  flex-direction column
  justify-content space-between


.page-title
  padding-left 16px
  font-size 16px
  font-weight 400
  color #2f3742
  line-height 44px

.page-title-icon
  display inline-block
  width 44px
  height 44px
  vertical-align middle
  margin -3px 10px 0 0 

.canvas-shape
  position absolute
  left 0
  top -9999px
  width 600px
  height 600px

.main-wrap
  background #fff
  padding 10px

  @media (max-width 359px)
    padding 5px