.page-lead
  z-index 100
  height 100%
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background #fff url('../../../../images/bg-lead.jpg') center bottom
  background-size 100% auto
  z-index 100
  transition ease-in-out 0.8s

  &.hide
    margin-top -100vh
    opacity 0
    filter (2px)

