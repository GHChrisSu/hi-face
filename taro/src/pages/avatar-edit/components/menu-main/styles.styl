$animateDuration = 0.35s

.menu-main-mask
  display none
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  &.menu-open
    display block
.menu-main
  position fixed
  left 0px
  top 0
  bottom 0
  width 230px
  // background #2F5AFF
  transform translate(-230px, 0)
  box-sizing border-box
  padding 0 20px 40px
  transition $animateDuration cubic-bezier(.75,.26,.02,1.01) transform
  &.menu-open
    transform translate(0, 0)
.menu-title
  font-size 20px
  line-height 1.4
  color #fff
  margin-bottom 14px
  &:before
    content ''
    display inline-block
    margin -3px 7px 0 0
    vertical-align middle
    width 14px
    height 28px
    background #FE9B0E
    border-radius 15px
    filter blur(0px)


