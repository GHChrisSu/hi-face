.theme-list
  display flex
  flex-wrap wrap
  padding-left 20px
  
.theme-item
  border-radius 30px 0 30px 0
  overflow hidden
  background #fff
  &:nth-child(2n)
    margin-left 20px
  &:nth-child(n + 3)
    margin-top 20px

  .theme-image
    width 70px
    height 70px
    // border-radius 15px
  .theme-text
    margin-top 3px
    font-size 12px
    line-height 1.5
    color #333333
    text-align center
    border-radius 10px
  &.theme-active
    .theme-text
      box-shadow 0 0 0 1px rgba(255, 255, 255, 0.3)

.about-wrap
  position absolute
  bottom 44px
  left 20px
  color #fff
  width 180px

  .about-text
    padding-left 20px
    font-size 15px

  .about-btn
    float right
    width 20px
    height 30px
    padding 5px 10px
    box-shadow 0 0 0 1px rgba(255, 255, 255, 1)
    border-radius 20px
    font-size 10px