.tab-wrap
    background #fcfcfc
  .tab-hd
    padding 10px 0 5px
    white-space nowrap
    

  
  .tab-hd-item
    display inline-block
    padding 3px
    border-radius 10px
    font-size 16px
    line-height 20px
    margin-right 10px
    color #AAAAAA
    white-space nowrap

    &:first-child
      margin-left 10px

  .tab-hd-active
    padding 3px 10px
    background #FF9F00
    color #fff


  .tab-hd-image
    display block
    height 25px
    width 25px

  .tab-bd-image-wrap
    display inline-block
    height 50px
    width 50px
    margin 5px

  .tab-bd-image
    display block
    width 100%
    height 100%

