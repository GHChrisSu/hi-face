.image-cropper{
  background:rgba(14, 13, 13,.8);
  position: fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  z-index: 1;
}
.main{
  position: absolute;
  width:100vw;
  height:100vh;
  overflow: hidden;
}
.content{
  z-index: 9;
  position: absolute;
  width:100vw;
  height:100vh;
  display: flex;
  flex-direction:column;
  pointer-events:none;
}
.bg_black{
  background: rgba(0, 0, 0, 0.8)!important;
}
.bg_gray{
  background: rgba(0, 0, 0, 0.45);
  transition-duration: .35s;
}
.content>.content_top{
  pointer-events:none;
}
.content>.content_middle{
  display: flex;
  height: 400px;
  width:100%;
}
.content_middle_middle{
  width:400px;
  box-sizing:border-box;
  position: relative;
  transition-duration: .3s;
}
.content_middle_right{
  flex: auto;
}
.content>.content_bottom{
  flex: auto;
}
.image-cropper .img{
  z-index: 2;
  top:0;
  left:0;
  position: absolute;
  border:none;
  width:100%;
  backface-visibility: hidden;
  transform-origin:center;
}
.image-cropper-canvas{
  position: fixed;
  background: white;
  width:300px;
  height:300px;
  z-index: 10;
  top:-200%;
  pointer-events:none;
}
.border{
  background: white;
  pointer-events:auto;
  position:absolute;
}
.border-top-left{
  left:-4px;
  top:-4px;
  height:4px;
  width:33px;
}
.border-top-right{
  right:-4px;
  top:-4px;
  height:4px;
  width:33px;
}
.border-right-top{
  top:-2px;
  width:4px;
  height:30px;
  right:-4px;
}
.border-right-bottom{
  width:4px;
  height:30px;
  right:-4px;
  bottom:-2px;
}
.border-bottom-left{
  height:4px;
  width:33px;
  bottom:-4px;
  left:-4px;
}
.border-bottom-right{
  height:4px;
  width:33px;
  bottom:-4px;
  right:-4px;
}
.border-left-top{
  top:-2px;
  width:4px;
  height:30px;
  left:-4px;
}
.border-left-bottom{
  width:4px;
  height:30px;
  left:-4px;
  bottom:-2px;
}