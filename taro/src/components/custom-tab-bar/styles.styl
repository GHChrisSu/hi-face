.tab-bar
  background rgba(222,232,255,0.2)
  display flex
  justify-content space-between
.tab-bar-item
  width 100px
  height 50px
  font-size 12px
  line-height 17px
  color #95A1AF
  text-align center
  overflow hidden
  margin-top 0
  transition 0.15s linear margin-top
.tab-bar-holder
  width 100px
  height 50px
  border-radius 0 0 50px 50px
  background #fff
.tab-bar-image
  width 30px
  height 30px
  display block
  margin 5px auto -3px

.tab-item-hide
  .tab-bar-image
    margin-top -46px
    transition 0.15s linear margin-top 0.15s
    
.tab-item-active
  color #2F3742

.bottom-safe-area
  padding-bottom 12px